<div class="row">
  <div class="mx-auto col-10 col-md-8 col-lg-6">
    <%= form_with model: @user do |f| %>
      <div class="row mb-4">
        <div class="col">
          <div class="form-outline">
            <%= f.label :first_name, class: "form-label" %>
            <%= f.text_field :f_name, class: "form-control" %>
          </div>
        </div>
        <div class="col">
          <div class="form-outline">
            <%= f.label :last_name, class: "form-label" %>
            <%= f.text_field :l_name, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-outline mb-4">
        <%= f.label :EMail, class: "form-label" %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="form-outline mb-4">
        <%= f.label :Country, class: "form-label" %>
        <%= f.text_field :country, class: "form-control" %>
      </div>
      
      <div class="form-outline mb-4">
        <%= f.label :Password, class: "form-label" %>
        <%= f.text_field :password, class: "form-control" %>
      </div>

      <%= f.fields_for :pan_card do |ff| %>
        <div class="form-outline mb-4">
          <%= ff.label :Pan_Card, class: "form-label" %>
          <%= ff.text_field :pan_number, class: "form-control" %>
        </div>
      <% end %>
      
      <%= f.submit 'Submit', class: "btn btn-primary btn-block mb-4" %>
    <% end %>
  </div>
</div>